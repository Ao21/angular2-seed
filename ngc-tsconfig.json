{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "lib": ["es5", "dom"],
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {},
    "types": [
      "core-js",
      "node"
    ]
  },
  "include": [
    "./src/app",
    "./src/app/+about/index.ts",
    "./src/main.browser.ts"
  ],
  "angularCompilerOptions": {
    "debug": true,
    "genDir": "./src/node_modules/ngfactory"
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
